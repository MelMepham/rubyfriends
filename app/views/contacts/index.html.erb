<h1>Contacts</h1>
<% if user_signed_in? %>
  <table class="f6 w-100 mw8 center" cellspacing="0">
    <thead>
      <tr class="stripe-dark">
        <th class="fw6 tl pa3 bg-white">Name</th>
        <th class="fw6 tl pa3 bg-white">Email</th>
        <th class="fw6 tl pa3 bg-white">Phone</th>
        <th class="fw6 tl pa3 bg-white">Twitter</th>
        <th class="fw6 tl pa3 bg-white"></th>
      </tr>
    </thead>

    <tbody class="lh-copy">
      <% @contacts.each do |contact| %>
        <tr class="stripe-dark">
          <td class="pa3">
            <%= link_to contact.first_name + ' ' + contact.last_name, contact, class:'f6 link dim black db' %>

          </td>
          <td class="pa3">
            <%= contact.email %>
          </td>
          <td class="pa3">
            <%= contact.phone %>
          </td>
          <td class="pa3">
            <%= contact.twitter %>
          </td>
          <td class="pa3">
            <%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' }, class:"f6 link dim br2 ba bw1 ph3 pv2 mb2 dib b--black black" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New contact', new_contact_path, class:"f6 link dim ba br2 ph3 pv2 mb2 dib white bg-hot-pink" %>
<% else %>
  <h2>
    Please sign in
  </h2>
<% end %>
