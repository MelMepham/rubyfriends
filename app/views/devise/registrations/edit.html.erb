<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt3">
    <%= f.label :email, class:"db fw6 lh-copy f6" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mt3">
    <%= f.label :password, class:"db fw6 lh-copy f6" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field mt3">
    <%= f.label :password_confirmation, class:"db fw6 lh-copy f6" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>

  <div class="field mt3">
    <%= f.label :current_password, class:"db fw6 lh-copy f6" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>

  <div class="actions mt3">
    <%= f.submit "Update", class:"f6 link dim ba br2 ph3 pv2 mb2 dib white bg-hot-pink" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"f6 link dim br2 ba bw1 ph3 pv2 mb2 dib hot-pink" %></p>

<%= link_to "Back", :back, class:"f6 link dim black db" %>
